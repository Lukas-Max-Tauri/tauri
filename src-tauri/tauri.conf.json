{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "DaZ Connect",
  "version": "0.1.0",
  "identifier": "de.dazconnect.app",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
"plugins": {
  "@tauri-apps/plugin-http": {
    "all": true,
    "scope": [
      "https://us-central1-daz-connect.cloudfunctions.net/*", 
      "http://localhost:*",
      "https://texttospeech.googleapis.com/*"  
    ]
  },
  "shell": {}
},
  "app": {
    "windows": [
      {
        "title": "DaZ Connect - Sprache verbindet Welten",
        "width": 800,
        "height": 600,
        "resizable": true,
        "fullscreen": false
      }
    ],
  
     "security": {
  "csp": "default-src 'self'; connect-src 'self' https://texttospeech.googleapis.com https://us-central1-daz-connect.cloudfunctions.net http://localhost:*; media-src 'self' blob:; audio-src 'self' blob:"
}
    },
  
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}